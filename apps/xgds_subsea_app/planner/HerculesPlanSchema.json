{
    "xpjson": "0.2",
    "type": "PlanSchema",
    "name": "Robot Science Schema",
    "notes": "Define available robot science commands",
    "id": "http://xgds.org/planner/HerculesPlanSchema.json",

    "planIdFormat": "{plan.site.id}{plan.platform.id}{plan.planNumber:03d}_{plan.planVersion}_PLAN",
    "stationIdFormat": "STN{stationIndex:02d}",
    "segmentIdFormat": "SEG{stationIndex:02d}",
    "commandIdFormat": "{parent.id}_{commandIndex:01d}_{command.presetCode}",

    "unitSpecs": [
	    {
	      "type": "UnitSpec",
	      "name": "length",
	      "units": {
	        "meters": 1.0,
	        "mm": 0.001,
	        "inches": 0.0254
	      }
	    },
	    {
	      "type": "UnitSpec",
	      "name": "duration",
	      "units": {
	        "seconds": 1.0,
	        "minutes": 60
	      }
	    },
	    {
	      "type": "UnitSpec",
	      "name": "speed",
	      "units": {
	        "m/s": 1.0,
	        "mph": 2.2369363
	      }
	    }
	  ],

    "paramSpecs": [
        {
            "type": "ParamSpec",
            "id": "instrument",
            "valueType": "string",
            "notes": "Instrument",
            "editable": false,
            "required": false
        },
        {
            "type": "ParamSpec",
            "id": "tolerance",
            "valueType": "number",
            "minimum": 0,
            "default": 0.6,
            "notes": "The vehicle must arrive within this distance of the goal position (meters)."
        },
        {
            "type": "ParamSpec",
            "id": "boundary",
            "valueType": "number",
            "minimum": 0,
            "default": 0.6,
            "required": false,
            "notes": "Station boundary (meters)."
        },
        {
            "type": "ParamSpec",
            "id": "distanceMeters",
            "valueType": "number",
            "minimum": 0,
            "notes": "The length the vehicle should travel (meters)."
        },
        {
            "type": "ParamSpec",
            "id": "traverseSpeed",
            "valueType": "number",
            "required": false,
            "minimum": 0,
            "notes": "The speed of traverse.",
            "default": 0.125
        },
        {
            "type": "ParamSpec",
            "id": "target",
            "valueType": "Point"
        },
        {
            "type": "ParamSpec",
            "id": "duration",
           	"widget":"h:m:s",
            "valueType": "number",
            "minimum": 0,
            "default": 0,
            "notes": "(Hours:)Minutes:Seconds"
        },
        {
            "type": "ParamSpec",
            "id": "depth",
            "unit": "m",
            "default": 3000,
            "valueType": "number"
        }
    ],

     "planParams": [
	{
	    "type": "ParamSpec",
	    "id": "defaultSpeed",
	    "valueType": "number",
        "unit": "m/s",
	    "notes": "The default speed for traverses",
	    "required": false,
	    "name": "Default Speed",
	    "default": 0.125,
	    "widget":"number"
	},
         {
			"type": "ParamSpec",
			"id": "startTime",
			"valueType": "date-time",
			"notes": "UTC time plan should start",
			"required": false,
			"name": "Start",
			"widget": "datetime"
		}
     ],

    "stationParams": [
        {
            "type": "ParamSpec",
            "id": "tolerance",
            "parent": "tolerance"
        },
        {
            "type": "ParamSpec",
            "id": "boundary",
            "parent": "boundary"
        },
        {
            "type": "ParamSpec",
            "id": "depth",
            "unit": "m",
            "default": 3000,
            "valueType": "number"
        },
        {
            "type": "ParamSpec",
            "id": "heading",
            "unit": "degrees",
            "default": -999,
            "valueType": "number"
        }
    ],

    "segmentParams": [
        {
            "type": "ParamSpec",
            "id": "hintedSpeed",
            "valueType": "number",
            "required": false,
            "minimum": 0,
            "notes": "Recommended traverse speed. Actual traverse speed may differ."
        }
    ],

     "commandSpecs": [
       {
            "type": "CommandSpec",
            "id": "VehicleCommand",
            "notes": "Vehicle specific command",
            "parent": "Command",
            "abstract": true,
            "params": [
                {
                    "type": "ParamSpec",
                    "id": "duration",
                    "valueType": "number",
                    "widget":"h:m:s",
                    "minimum": 0,
                    "default": 300
                },
                {
                    "type": "ParamSpec",
                    "id": "presetCode",
                    "valueType": "string",
                    "required": true
                },
                {
                    "type": "ParamSpec",
                    "id": "presetName",
                    "valueType": "string",
                    "required": true
                },
                {
                    "type": "ParamSpec",
                    "id": "instrument",
                    "parent": "instrument"
                }
            ]
        },
        {
            "type": "CommandSpec",
            "parent": "VehicleCommand",
            "id": "ascent",
            "color": "#fff9e6",
             "params": [
                {
                    "type": "ParamSpec",
                    "id": "depth",
                    "parent": "depth",
                    "onChange": "if (app.currentPlan != undefined){ if ($.isNumeric(value)){ var newDuration = 2400 + (model.get('depth')/.25); model.set('duration', newDuration);}}"
                }
             ]
        },
        {
            "type": "CommandSpec",
            "parent": "VehicleCommand",
            "id": "descent",
            "color": "#fff9e6",
             "params": [
                {
                    "type": "ParamSpec",
                    "id": "depth",
                    "parent": "depth",
                    "onChange": "if (app.currentPlan != undefined){ if ($.isNumeric(value)){ var newDuration = 4500 + (model.get('depth')/.41666667); model.set('duration', newDuration);}}"
                }
             ]
        },
        {
            "type": "CommandSpec",
            "id": "pause",
            "parent": "VehicleCommand",
            "color": "#dcdcdc"
        },
        {
            "type": "CommandSpec",
            "parent": "VehicleCommand",
            "id": "mapping_setup",
            "color": "#fff5c1"
        },
        {
            "type": "CommandSpec",
            "id": "sampling_setup",
            "parent": "VehicleCommand",
            "color": "#c3f89c"
        },
        {
            "type": "CommandSpec",
            "parent": "VehicleCommand",
            "id": "IGT",
            "color": "#98CED9"
        },
        {
            "type": "CommandSpec",
            "parent": "VehicleCommand",
            "id": "SUPR_filter",
            "color": "#adfff4"
        },
        {
            "type": "CommandSpec",
            "parent": "VehicleCommand",
            "id": "SUPR_bag",
            "color": "#adfff4"
        },
         {
            "type": "CommandSpec",
            "parent": "VehicleCommand",
            "id": "SUPR_tube",
            "color": "#adfff4"
        },
        {
            "type": "CommandSpec",
            "parent": "VehicleCommand",
            "id": "grab",
            "color": "#FFD7B1"
        },
        {
            "type": "CommandSpec",
            "parent": "VehicleCommand",
            "id": "niskin",
            "color": "#DCF8AC"
        },
        {
            "type": "CommandSpec",
            "parent": "VehicleCommand",
            "id": "temp_probe",
            "color": "#ffc4c8"
        },
        {
            "type": "CommandSpec",
            "parent": "VehicleCommand",
            "id": "misc",
            "color": "#ffc4c8"
        },
        {
            "type": "CommandSpec",
            "parent": "VehicleCommand",
            "id": "imaging",
            "color": "#b0eab0"
        },
        {
            "type": "CommandSpec",
            "parent": "VehicleCommand",
            "id": "marker",
            "color": "#d4d4aa"
        }
     ],

    "stationSequenceCommands": [
    	"pause",
        "ascent",
        "descent",
        "mapping_setup",
        "sampling_setup",
        "IGT",
        "SUPR_filter",
        "SUPR_tube",
        "SUPR_bag",
        "grab",
        "niskin",
        "temp_probe",
        "misc",
        "imaging",
        "marker"
    ],

    "segmentSequenceCommands": [
    ]
}
